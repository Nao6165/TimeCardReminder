<Window x:Class="TimeCardReminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeCardReminder"
        xmlns:form="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="TimeCardReminder" Height="400" Width="800" Icon="TimeCard.bmp">
    <Window.DataContext>
        <local:Schedules />
    </Window.DataContext>

    <Grid RenderTransformOrigin="0.512,0.331" Margin="10,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="203*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <local:Schedules x:Key="schedules"/>
        </Grid.Resources>
        <Button x:Name="Button1" Content="Set" HorizontalAlignment="Left" Margin="318,94,0,0" VerticalAlignment="Top" Width="75" Click="Button1_Click" Grid.Column="2" Grid.Row="1" Height="20"/>
        <WindowsFormsHost Margin="10,159,184,23" Grid.Column="2">
            <form:DateTimePicker x:Name="dateTimePicker1" Left="100" Width="53"  Format="Time" ShowUpDown="True" Size="0, 0"/>
        </WindowsFormsHost>
        <TextBox x:Name="textBox1" Grid.Column="2" HorizontalAlignment="Left" Height="90" Margin="10,33,0,0" TextWrapping="Wrap" Text="リマインド内容を記入してね" VerticalAlignment="Top" Width="383"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="10,12,0,0" TextWrapping="Wrap" Text="リマインドメッセージ：" VerticalAlignment="Top" Height="16" Width="99"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="10,138,0,0" TextWrapping="Wrap" Text="時刻指定：" VerticalAlignment="Top" Height="16" Width="60"/>
        <ListBox x:Name="ListBox1" ItemsSource="{Binding Path=mySchedules}" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="304" Margin="42,33,0,0" VerticalAlignment="Top" Width="267" DisplayMemberPath="Message" Grid.RowSpan="2"/>
        <Button x:Name="Button2" Content="追加" Grid.Column="2" HorizontalAlignment="Left" Margin="34,25,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Button2_Click"/>
        <Button x:Name="Button3" Content="削除" Grid.Column="2" HorizontalAlignment="Left" Margin="142,25,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Button3_Click"/>
    </Grid>

</Window>
