<Window x:Class="TimeCardReminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeCardReminder"
        xmlns:form="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="TimeCardReminder" Height="334" Width="660.5" Icon="TimeCard.bmp">
    <Window.DataContext>
        <local:Schedules />
    </Window.DataContext>

    <Grid RenderTransformOrigin="0.512,0.331" Margin="10,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="194*"/>
            <RowDefinition Height="115*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <local:Schedules x:Key="schedules"/>
        </Grid.Resources>
        <Button x:Name="Button1" Content="設定" HorizontalAlignment="Left" Margin="250,72,0,0" VerticalAlignment="Top" Width="75" Click="Button1_Click" Grid.Column="2" Grid.Row="1" Height="20"/>
        <WindowsFormsHost Margin="10,149,250,19" Grid.Column="2">
            <form:DateTimePicker x:Name="dateTimePicker1" Left="100" Width="53"  Format="Time" ShowUpDown="True" Size="0, 0"/>
        </WindowsFormsHost>
        <TextBox x:Name="textBox1" Grid.Column="2" HorizontalAlignment="Left" Height="90" Margin="10,33,0,0" TextWrapping="Wrap" Text="リマインド内容を記入してね★" VerticalAlignment="Top" Width="315"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="リマインドメッセージ：" VerticalAlignment="Top" Height="18" Width="117"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="10,128,0,0" TextWrapping="Wrap" Text="時刻指定：" VerticalAlignment="Top" Height="16" Width="60"/>
        <ListBox x:Name="ListBox1" ItemsSource="{Binding Path=mySchedules}" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="249" Margin="10,33,0,0" VerticalAlignment="Top" Width="267" DisplayMemberPath="Message" Grid.RowSpan="2" SelectionChanged="ListBox1_SelectionChanged"/>
        <Button x:Name="Button2" Content="追加" Grid.Column="2" HorizontalAlignment="Left" Margin="10,15,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Button2_Click" Height="20"/>
        <Button x:Name="Button3" Content="削除" Grid.Column="2" HorizontalAlignment="Left" Margin="250,15,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Button3_Click" Height="20"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="登録済みアイテム：" VerticalAlignment="Top"/>
        <Button x:Name="Button4" Content="編集" Grid.Column="2" HorizontalAlignment="Left" Margin="130,15,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Button4_Click"/>
    </Grid>

</Window>
